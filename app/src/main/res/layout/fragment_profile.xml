<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/KalariLabMain"
    tools:context=".ProfileFragment">

  <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="-50dp"
      app:cardBackgroundColor="@color/KalariLAbSecondary"
      app:cardCornerRadius="60dp"
      app:layout_constraintBottom_toTopOf="@id/gl_cardViewLowerBorder"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gl_cardViewLowerBorder"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.9" />


  <TextView
      android:id="@+id/profileHeader"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:elevation="3dp"
      android:fontFamily="@font/roboto_regular"
      android:text="@string/profile"
      android:textColor="@color/white"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/profile_image"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="40dp"
      android:elevation="3dp"
      android:src="@drawable/profile"
      app:civ_border_color="@color/darkerGrey"
      app:civ_border_width="2dp"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintEnd_toEndOf="@id/gl_profileImage_v1"
      app:layout_constraintStart_toStartOf="@id/gl_profileImage_v"
      app:layout_constraintTop_toBottomOf="@id/profileHeader" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gl_profileImage_v"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.33" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gl_profileImage_v1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.67" />


  <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:elevation="3dp"
      android:fontFamily="@font/roboto_regular"
      android:text="Ahmed Al-maliki, 22"
      android:textColor="@color/white"
      android:textSize="30sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/profile_image" />

  <TextView
      android:id="@+id/bio"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center"
      android:elevation="3dp"
      android:fontFamily="@font/roboto_regular"
      android:gravity="center"
      android:maxLength="100"
      android:text="kiljdg drkjgb kgrdkg krgh irdg kdrgh jkrg drhg kdrghghdkhg"
      android:textColor="@color/lightGrey"
      android:textSize="20sp"
      app:layout_constrainedWidth="true"
      app:layout_constraintEnd_toStartOf="@id/gl_bio_v1"
      app:layout_constraintStart_toStartOf="@id/gl_bio_v"
      app:layout_constraintTop_toBottomOf="@id/name" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gl_bio_v"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.05" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gl_bio_v1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.95" />



        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bio"
            app:layout_constraintEnd_toStartOf="@id/gl_profileImage_v"

            android:layout_marginTop="70dp"
            android:background="@color/KalariLAbSecondary"
            android:src="@drawable/settings_grey"

            android:elevation="2dp"/>


          <ImageButton
              android:id="@+id/editInfo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/edit_info"
              android:background="@color/KalariLAbSecondary"
              android:layout_marginTop="70dp"
              android:elevation="2dp"
              app:layout_constraintTop_toBottomOf="@id/bio"
              app:layout_constraintStart_toEndOf="@id/gl_profileImage_v1"

              />





</androidx.constraintlayout.widget.ConstraintLayout>