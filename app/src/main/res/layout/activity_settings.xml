<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/KalariLabMain"
    >
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_general_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_upperBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_general_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/gl_general_v"
            app:layout_constraintTop_toBottomOf="@id/gl_upperBorder"
            android:background="@color/KalariLabMain"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/reset_password"
            android:textColor="@color/white"
            android:id="@+id/headLine"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/gl_general_v"
            app:layout_constraintEnd_toStartOf="@id/gl_general_v1"
            app:layout_constraintTop_toBottomOf="@id/gl_upperBorder"
           />


    <TextView
        android:id="@+id/accountSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/account"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/gl_general_v"
        app:layout_constraintTop_toBottomOf="@+id/headLine"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/changePasswordCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/settings_card_height"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/gl_general_v"
        app:layout_constraintTop_toBottomOf="@id/accountSettingsTitle"
        app:layout_constraintEnd_toStartOf="@id/gl_general_v1"
        app:cardBackgroundColor="@color/darkGrey"/>



            <ImageView
                android:id="@+id/lock"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:elevation="3dp"
                app:layout_constraintTop_toTopOf="@id/changePasswordCard"
                app:layout_constraintBottom_toBottomOf="@id/changePasswordCard"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/changePasswordCard"
                android:src="@drawable/lock" />

            <TextView
                android:id="@+id/changePasswordCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_medium"

                android:elevation="3dp"
                app:layout_constraintTop_toTopOf="@id/changePasswordCard"
                app:layout_constraintStart_toStartOf="@id/changePasswordCard"
                app:layout_constraintBottom_toBottomOf="@id/changePasswordCard"
                app:layout_constraintEnd_toEndOf="@id/changePasswordCard"
                android:text="@string/reset_password"
                android:textColor="@color/white"
                android:textSize="20sp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logOutCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/settings_card_height"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/gl_general_v"
        app:layout_constraintTop_toBottomOf="@id/changePasswordCard"
        app:layout_constraintEnd_toStartOf="@id/gl_general_v1"
        app:cardBackgroundColor="@color/darkGrey"/>



            <ImageView
                android:id="@+id/logOut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:elevation="3dp"
                app:layout_constraintStart_toStartOf="@id/logOutCard"
                app:layout_constraintTop_toTopOf="@id/logOutCard"
                app:layout_constraintBottom_toBottomOf="@id/logOutCard"
                android:src="@drawable/log_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/logOutCard"
                app:layout_constraintTop_toTopOf="@id/logOutCard"
                app:layout_constraintEnd_toEndOf="@id/logOutCard"
                app:layout_constraintBottom_toBottomOf="@id/logOutCard"
                android:elevation="3dp"
                android:textSize="20sp" />




</androidx.constraintlayout.widget.ConstraintLayout>